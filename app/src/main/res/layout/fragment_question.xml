<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vitech.nexusedu.data.QuestionFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/question_frame"
        android:visibility="visible"
        tools:layout_editor_absoluteY="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question isaoifhwrgIodehvkj;SDVB  KFBNE   ;FKBN   E'OIRBH EPORBHE R'IBJERBETNB"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:id="@+id/statement"/>
            <RadioGroup
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer"
                >

                <com.vitech.nexusedu.data.AnswerButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/option_a"
                    />

                <com.vitech.nexusedu.data.AnswerButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/option_b"/>
                <com.vitech.nexusedu.data.AnswerButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/option_c"/>
                <com.vitech.nexusedu.data.AnswerButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/option_d"/>


            </RadioGroup>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
